<form action="/properties/create" method="POST" enctype="multipart/form-data" class="form-createProduct">

    <fieldset data-id="1">
        <div>
            <label for="title">Titulo de la Propiedad</label>
            <input type="text" name="title" id="title" placeholder="Hermosa casa a estrenar..." value="<%= locals.old && old.title ? old.title : ''%>">
            <% if (locals.errors && errors.title) { %>
                <div class="errors-form">
                    <i class="fas fa-exclamation-triangle"></i>
                    <p class="feedback"><%= errors.title.msg %></p>
                </div>
            <% } %>
        </div>
        <section class="price-fields">
            <div>
                <label for="ref">REF #</label>
                <input type="text" name="ref" placeholder="4560">
            </div>
            <div>
                <label for="price">Precio</label>
                <select name="moneda_id" id="currency">
                    <option value="" disabled selected>-$-</option>
                    <option value="1">$</option>
                    <option value="2">U$S</option>
                </select>
            </div>
            <div>
                <input type="number" name="price" id="price" placeholder="12500">
            </div>
            <div>
                <label for="financiacion">Financiación</label>
                <select name="financiacion" id="financiacion">
                    <option value="1">Disponible</option>
                    <option value="2" selected>No disponible</option>
                </select>
            </div>
        </section>
        <input type="button" class="next btn btn-info" value="Siguiente" />

    </fieldset>
    <fieldset data-id="2">
        <div class="input-imagenes">
            <label for="portada">Imagen de Portada</label>
            <input type="file" name="portada">

            <label for="galeria">Imagenes de la Galería</label>
            <input type="file" name="galeria" multiple>
        </div>
        <div>
            <input type="button" name="previous" class="previous btn btn-default" value="Previo" />
            <input type="button" name="next" class="next btn btn-info" value="Siguiente" />
        </div>
        
    </fieldset>
    <fieldset data-id="3">
        <div>
            <label for="address">Dirección</label>
            <input type="text" name="address" id="address" placeholder="Avenida Italia 2480...">
        </div>
        <div>
            <select name="localidad_id" id="city">
                <option value="" disabled selected>--Localidad--</option>
                <% for(ciudad of ciudades) { %>
                    <option value="<%= ciudad.id %>"> <%= ciudad.name %> </option>
                <% } %>
            </select>
        </div>        
        <div class="grid-2">
            <div>
                <label for="operationType">Operación</label>
                <select name="operationType" id="operationType">
                    <option value="Alquiler">Alquiler</option>
                    <option value="Venta">Venta</option>
                    <option value="Venta/Alquiler">Venta/Alquiler</option>
                </select>
            </div>
        </div>
        <div>
            <input type="button" name="previous" class="previous btn btn-default" value="Previo" />
            <input type="button" name="next" class="next btn btn-info" value="Siguiente" />
        </div>
            
    </fieldset>
    <fieldset data-id="4">
        <div>
            <label for="type">Tipo de Propiedad</label>
            <select name="tipo_id" id="type">
                <option value="" disabled selected>--Seleccionar--</option>
                <% for(tipoPropiedad of tipoPropiedades) { %>
                    <option value="<%= tipoPropiedad.id %>"> <%= tipoPropiedad.name %> </option>
                <% } %>
            </select>
        </div>
        <div>
            <label for="status">Estado</label>
            <select name="status" id="status">
                <option value="Disponible">Disponible</option>
                <option value="No disponible">No disponible</option>
            </select>
        </div>
        <div>
            <label class="label-form" for="superficieTerreno">Área<label></label> <input type="number" name="superficieTer" id="superficieTerreno">
        </div>
        <div>
            <label class="label-form" for="superficieConstruccion">Construcción (m2) </label><input type="number" name="superficieCons" id="superficieConstruccion">
        </div>
    </div>
    <div>
        <input type="button" name="previous" class="previous btn btn-default" value="Previo" />
        <input type="button" name="next" class="next btn btn-info" value="Siguiente" />
    </div>
    
    </fieldset>
    <fieldset data-id="5">
        <div class="grid-3">
            <div>
                <label for="bedrooms">Dormitorios</label>
                <input type="number" name="bedrooms" min="0" value="1">
            </div>
            
            <div>
                <label for="toilet">Baños</label>
                <input type="number" name="toilets" min="0" value="1">
            </div>

            <div>
                <label for="garage"> Garage </label>
                <input type="number" name="garage" min="0">
            </div>
        </div>
        <div>
            <textarea name="description" id="description" cols="30" rows="5" placeholder="Describe la propiedad..." width="100%"></textarea>
        </div>
        <div>
            <legend>Comodidades</legend>
            <% for(comodidad of comodidades) { %>
                <label class="label-form"> <input type="checkbox" name="comodidad" value="<%= comodidad.id%>"> <%= comodidad.name %></label><br>
            <% } %>
        </div>
        <div>
            <input type="button" name="previous" class="previous btn btn-default" value="Previo" />
            <input type="button" name="next" class="next btn btn-info" value="Siguiente" />
        </div>
        
    </fieldset>
    <fieldset data-id="6">
        <div class="grid-2">
            <div>
                <label class="label-form" for="published">
                <input type="checkbox" name="published" id="published" value="1">Publicada</label>
            </div>
            <div>
                <label class="label-form" for="featured"><input type="checkbox" name="featured" id="featured" value="1">Destacada<label>
            </div>
            <div>
                <label class="label-form" for="muestraPrecio"><input type="checkbox" name="showPrice" id="muestraPrecio" value="1">Mostrar Precio<label>
            </div>
        </div>
        <div>
            <input type="button" class="previous btn btn-default" value="Previo" />
            <input type="submit" class="submit btn btn-success" value="Enviar" id="submit_data" />
        </div>
    </fieldset>
</form>