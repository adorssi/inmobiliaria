<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/admin/head.ejs') %>
        <body>
            <%- include('../partials/admin/header.ejs') %>
                <main class="main-contenedor">
                    <%- include('../partials/admin/sidebar.ejs') %>
                    <form action="/properties/create" method="POST" enctype="multipart/form-data" class="form-createProduct">
                        <div>
                            <label for="title">Titulo de la Propiedad</label>
                            <input type="text" name="title" id="title" placeholder="Hermosa casa a estrenar...">
                        </div>
                        <section class="price-fields">
                            <div>
                                <label for="ref">REF #</label>
                                <input type="text" name="ref" placeholder="4560">
                            </div>
                            <div>
                                <label for="price">Precio</label>
                                <select name="currency" id="currency">
                                    <option value="" disabled selected>-$-</option>
                                    <option value="$">$</option>
                                    <option value="USD">U$S</option>
                                </select>
                            </div>
                            <div>
                                <input type="number" name="price" id="price" placeholder="12500">
                            </div>
                        </section>
                        <div class="input-imagenes">
                            <label for="image">Imagenes del Producto</label>
                            <input type="file" name="image">
                        </div>
                        <div>
                            <label for="address">Dirección</label>
                            <input type="text" name="address" id="address" placeholder="Avenida Italia 2480...">
                        </div>
                        <div>
                            <select name="city" id="city">
                                <option value="" disabled selected>--Localidad--</option>
                                <% for(ciudad of ciudades) { %>
                                    <option value="<%= ciudad.id %>"> <%= ciudad.name %> </option>
                                <% } %>
                            </select>
                        </div>        
                        <div class="grid-2">
                            <div>
                                <label for="operationType">Operación</label>
                                <select name="operationType" id="operationType">
                                    <option value="Alquiler">Alquiler</option>
                                    <option value="Venta">Venta</option>
                                    <option value="Venta/Alquiler">Venta/Alquiler</option>
                                </select>
                            </div>
                            <div>
                                <label for="financiacion">Financiación</label>
                                <select name="financiacion" id="financiacion">
                                    <option value="1">Disponible</option>
                                    <option value="2" selected>No disponible</option>
                                </select>
                            </div>
                            <div>
                                <label for="type">Tipo de Propiedad</label>
                                <select name="type" id="type">
                                    <option value="" disabled selected>--Seleccionar--</option>
                                    <% for(tipoPropiedad of tipoPropiedades) { %>
                                        <option value="<%= tipoPropiedad.id %>"> <%= tipoPropiedad.name %> </option>
                                    <% } %>
                                </select>
                            </div>
                            <div>
                                <label for="status">Estado</label>
                                <select name="status" id="status">
                                    <option value="Disponible">Disponible</option>
                                    <option value="No disponible">No disponible</option>
                                </select>
                            </div>
                            <div>
                                <label class="label-form" for="superficieTerreno">Área<label></label> <input type="number" name="superficieTerreno" id="superficieTerreno">
                            </div>
                            <div>
                                <label class="label-form" for="superficieConstruccion">Construcción (m2) </label><input type="number" name="superficieConstruccion" id="superficieConstruccion">
                            </div>
                        </div>
                        <div class="grid-3">
                            <div>
                                <label for="bedrooms">Dormitorios</label>
                                <input type="number" name="bedrooms" min="0" value="1">
                            </div>
                            
                            <div>
                                <label for="toilet">Baños</label>
                                <input type="number" name="toilet" min="0" value="1">
                            </div>

                            <div>
                                <label for="garage"> Garage </label>
                                <input type="number" name="garage" min="0">
                            </div>
                        </div>
                        <div>
                            <textarea name="description" id="description" cols="30" rows="5" placeholder="Describe la propiedad..." width="100%"></textarea>
                        </div>

                        <fieldset>
                            <legend>Comodidades</legend>
                            <% for(comodidad of comodidades) { %>
                                <label class="label-form"> <input type="checkbox" name="<%= comodidad.name %>" id="<%= comodidad.name%>"> <%= comodidad.name %></label><br>
                            <% } %>
                        </fieldset>

                        <div class="grid-2">
                            <div>
                                <label class="label-form" for="published">
                                <input type="checkbox" name="published" id="published">Publicada</label>
                            </div>
                            <div>
                                <label class="label-form" for="featured"><input type="checkbox" name="featured" id="featured">Destacada<label>
                            </div>
                            <div>
                                <label class="label-form" for="topThree">
                                <input type="checkbox" name="topThree" id="topThree">Top 3<label>
                            </div>
                            <div>
                                <label class="label-form" for="muestraPrecio"><input type="checkbox" name="muestraPrecio" id="muestraPrecio">Mostrar Precio<label>
                            </div>
                        </div>
                        
                </div>
                <div class="modal-footer">
                <a href="/adminDash" class="btn btn-secondary">Cerrar</a>
                <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
                </main>
        </body>
</html>