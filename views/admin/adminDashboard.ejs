<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/admin/head.ejs') %>
        <body>
            <%- include('../partials/admin/header.ejs') %>
                <main class="main-contenedor">
                    <%- include('../partials/admin/sidebar.ejs') %>
                        <section class="contenedor-botones">
                            <a href="/properties/create" class="btn btn-primary">
                                <i class="fas fa-plus-circle"></i> Agregar Propiedad
                            </a>
                            <a href="/" class="btn btn-primary" target="_blank">
                                <i class="fas fa-external-link-alt"></i> Ver sitio
                            </a>
                        </section>
                        <table class="productTable listadoProductos">
                            <thead>
                                <tr>
                                    <th>Imagen</th>
                                    <th>REF</th>
                                    <th>Nombre</th>
                                    <th>Tipo</th>
                                    <th>Operacion</th>
                                    <th>Precio</th>
                                    <th>Publicado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                <% for(let propiedad of listadoPropiedades) { %>
                                    <tr>
                                        <td><img id="imagen" width="50px" src=<%= propiedad.image %>></td>
                                        <td><%= propiedad.ref %></td>
                                        <td><%= propiedad.title %></td>
                                        <td><% for(tipoPropiedad of tipoPropiedades) { %>
                                                <% if(propiedad.type == tipoPropiedad.id) { %>
                                                    <%= tipoPropiedad.name %>
                                                <% } %>
                                            <% } %>
                                        </td>
                                        <td><%= propiedad.operationType %></td>
                                        <td><%= propiedad.currency %> <%= propiedad.price %></td>
                                        <td> <i class="<%= propiedad.published ? 'fas fa-check publicada' : 'fas fa-times no-publicada' %>"> </i></td>
                                        <td class="acciones"><a href="/properties/edit/<%= propiedad.id %>" id="editar" class="editar-producto bntDashboard1"> <i class="fas fa-pen"> </i> </a>
                                            
                                        <form onsubmit="recargar" action="/properties/delete/<%= propiedad.id %>?_method=DELETE" method="POST">
                                            <button type="submit" class="eliminar-producto bntDashboard1 btn-danger"><i class="far fa-trash-alt"></i></button> 
                                        </form>
                                        
                                        </td>                        
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                </main>
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

            <script src="/js/app-admin.min.js"></script>
        </body>
</html>